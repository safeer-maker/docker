FROM ubuntu

ENV FOULDER beginner-html-site-styled
# RUN yum install apache2 -y
RUN apt-get update
RUN apt-get install  apache2  git apache2-utils unzip  -y

WORKDIR /var/www/html

ADD https://github.com/mdn/${FOULDER}/archive/refs/heads/gh-pages.zip code.zip

RUN unzip code.zip 

RUN mv ${FOULDER}-gh-pages/* .

CMD ["apachectl", "-D", "FOREGROUND"]