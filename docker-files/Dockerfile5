FROM ubuntu

ENV FOULDER beginner-html-site-styled

RUN apt-get update
RUN apt-get install apache2 apache2-utils unzip -y

WORKDIR /var/www/html

ADD https://github.com/mdn/${FOULDER}/archive/refs/heads/gh-pages.zip code.zip

RUN unzip code.zip && mv ${FOULDER}-gh-pages/* .

COPY cmd.sh .

RUN chmod +x cmd.sh

CMD cmd.sh